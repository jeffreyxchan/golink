{
	"name": "golink",
	"version": "1.0.0",
	"description": "URL shortcut server",
	"main": "app.js",
	"dependencies": {
		"body-parser": "^1.19.0",
		"express": "^4.17.3",
		"mongoose": "^5.7.5",
		"morgan": "^1.9.1"
	},
	"devDependencies": {
		"nodemon": "^1.19.2",
		"prettier": "^1.18.2"
	},
	"scripts": {
		"dev": "nodemon src/app.js",
		"format": "npm run format-js",
		"format-js": "find . -type f \\( -name \"*.js\" -or -name \"*.json\" \\) -not -path \"./node_modules/**\" | xargs prettier --write",
		"start": "node src/app.js"
	},
